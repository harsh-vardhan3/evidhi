<!-- signup_lsp.html -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0"
      crossorigin="anonymous"
    />

    <style>
      body {
        background: linear-gradient(to bottom, #ffa500, #008000);
        margin: 0;
        padding: 0;
      }

      .signup-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .signup-btn {
        width: 100%;
        font-size: 18px;
        margin-top: 10px;
      }
    </style>

    <title>LSP Signup</title>
  </head>

  <body>
    <form class="container signup-container" method="post" action="/">
      <h2 class="text-center mb-4">LSP Signup</h2>
      <form
        id="lspSignupForm"
        action="/signup"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="aadhaarLicense" class="form-label"
            >Aadhaar/License Number</label
          >
          <input
            type="text"
            class="form-control"
            id="aadhaarLicense"
            name="aadhaarLicense"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          />
        </div>
        <div class="mb-3">
          <label for="mobile" class="form-label">Mobile Number</label>
          <input
            type="tel"
            class="form-control"
            id="mobile"
            name="mobile"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="form-label"
            >Confirm Password</label
          >
          <input
            type="password"
            class="form-control"
            id="confirmPassword"
            name="confirmPassword"
            required
          />
          <div class="invalid-feedback" id="passwordMismatchFeedback">
            Passwords do not match.
          </div>
        </div>
        <div class="mb-3">
          <label for="speciality" class="form-label">Speciality</label>
          <input
            type="text"
            class="form-control"
            id="speciality"
            name="speciality"
            required
          />
        </div>
        <div class="mb-3">
          <label for="profilePicture" class="form-label">Profile Picture</label>
          <input
            type="file"
            class="form-control"
            id="profilePicture"
            name="profilePicture"
            accept="image/*"
          />
        </div>

        <!-- Your form fields go here -->
        <button herf="/login" type="submit" class="btn btn-primary signup-btn">
          Signup
        </button>
      </form>
    </form>

    <!-- Bootstrap JS and dependencies -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"
      integrity="sha384-mQCZi3z9ENG6W7/nh6SX3pYoX1M1lZgveQGdZsLEHhDQlPr5a4ibnVyA7t6zPLhs"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-sgH1YAfA01HDFt+xvZMqzWZR2Hi8AeWqFss8E2+aZlIaLPPYad+D8jQOeCzyACZL"
      crossorigin="anonymous"
    ></script>

    <script>
      document
        .getElementById("lspSignupForm")
        .addEventListener("submit", function (event) {
          // Prevent form submission if passwords do not match
          const password = document.getElementById("password").value;
          const confirmPassword =
            document.getElementById("confirmPassword").value;

          if (password !== confirmPassword) {
            document.getElementById("passwordMismatchFeedback").style.display =
              "block";
            event.preventDefault(); // Prevent form submission
          }
        });
    </script>
  </body>
</html>
