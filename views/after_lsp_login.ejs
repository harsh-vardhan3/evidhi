<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>LSP Login</title>

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-urZS9kR+Zq7sBk9LSrGxj4GezLgTbNFu7Zx2o7C5SOq7odRyO39S8GGZp6C3ccZfQ1XP7+U6P/w5Udeq1rM6Gg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <style>
      body {
        background-color: #f8f9fa;
      }

      .profile-section {
        padding: 50px 0;
        text-align: center;
      }

      .profile-photo {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        margin: 0 auto 20px;
      }

      .profile-photo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .profile-name {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
      }

      .profile-info {
        color: #6c757d;
      }

      .clients-section,
      .leaderboard-section {
        padding: 50px 0;
      }

      .star-rating span {
        color: #ffc107; /* Yellow color for stars */
      }

      .list-group-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
    </style>
  </head>
  <body>
    <!-- Profile Section -->
    <!-- Profile Section -->
    <div class="container profile-section">
      <div class="profile-photo">
        <img src="public/profile/xzg(1).jpg"Profile Photo" />
      </div>
      <p>"profile Name"</p>
      <div class="profile-name"><%= userName.name %></div>

      <!-- Add your profile content and E Vidhi coins here -->
      <p class="profile-info">
        E Vidhi Coins: <span id="evidhiCoins">100</span>
      </p>
      <p class="profile-info">Earnings: $500</p>
      <!-- Add more content as needed -->
    </div>

    <!-- Clients Section -->
    <div class="container clients-section">
      <h2>Clients</h2>
      <!-- Add your clients content here -->
      <p>Your clients will be listed here.</p>
      <!-- Add more content as needed -->
    </div>

    <!-- Leaderboard Section -->
    <div class="container leaderboard-section">
      <h2>Leaderboard</h2>
      <!-- Add your leaderboard content here -->
      <ul class="list-group">
        <li class="list-group-item">
          <span class="star-rating"
            ><span class="fas fa-star"></span>
            <span class="fas fa-star"></span> <span class="fas fa-star"></span
          ></span>
          Player A - 100 E Vidhi Coins
        </li>
        <li class="list-group-item">
          <span class="star-rating"
            ><span class="fas fa-star"></span> <span class="fas fa-star"></span
          ></span>
          Player B - 90 E Vidhi Coins
        </li>
        <!-- Add more leaderboard items as needed -->
      </ul>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"
      integrity="sha384-mQCZi3z9ENG6W7/nh6SX3pYoX1M1lZgveQGdZsLEHhDQlPr5a4ibnVyA7t6zPLhs"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-sgH1YAfA01HDFt+xvZMqzWZR2Hi8AeWqFss8E2+aZlIaLPPYad+D8jQOeCzyACZL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
